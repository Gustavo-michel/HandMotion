{
    "manifest_version": 3,
    "name": "HandMotion",
    "description": "A hand detector for web and desktop browsing",
    "version": "0.1",
    "action": {
      "default_popup": "popup/handmotion.html",
      "default_icon": "popup/handmotion.png"
    },
    "permissions": [
    "activeTab",
    "scripting",
    "storage"
    ],
    "background": {
        "scripts": ["socket.io.js", "background.js", "main.py"]
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "host_permissions": [
    "http://localhost/*"
    ]
  }